{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowUmdGlobalAccess": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },
  "include": [
    "js/**/*.ts",
    "js/**/*.d.ts",
    "js/**/*.elm"
  ]
}
